    "/api/products/{productId}/production-time": {
      "get": {
        "summary": "Получить суммарное время изготовления изделия по всем цехам",
        "tags": ["ProductWorkshops"],
        "parameters": [
          {
            "in": "path",
            "name": "productId",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Суммарное время изготовления",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "productId": { "type": "integer", "example": 1 },
                    "totalProductionTime": {
                      "type": "number",
                      "example": 12.5
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Некорректный id продукта" }
        }
      }
