  "components": {
    "schemas": {
      "ProductCreate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Прихожая Венге Винтаж"
          },
          "typeId": {
            "type": "integer",
            "example": 2
          },
          "materialId": {
            "type": "integer",
            "example": 2
          },
          "minPrice": {
            "type": "number",
            "example": 24970
          }
        },
        "required": ["name", "typeId", "materialId", "minPrice"]
      },
      "Product": {
        "allOf": [
          { "$ref": "#/components/schemas/ProductCreate" },
          {
            "type": "object",
            "properties": {
              "id": { "type": "integer", "example": 3 },
              "article": {
                "type": "string",
                "example": "3028272",
                "description": "Генерируется на сервере"
              },
              "createdAt": {
                "type": "string",
                "format": "date-time"
              },
              "updatedAt": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        ]
      },

      "MaterialCreate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Мебельный щит из массива дерева"
          },
          "lossPercent": {
            "type": "number",
            "example": 5
          }
        },
        "required": ["name", "lossPercent"]
      },
      "Material": {
        "allOf": [
          { "$ref": "#/components/schemas/MaterialCreate" },
          {
            "type": "object",
            "properties": {
              "id": { "type": "integer", "example": 1 },
              "createdAt": {
                "type": "string",
                "format": "date-time"
              },
              "updatedAt": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        ]
      },

      "WorkshopCreate": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Раскроя" },
          "type": { "type": "string", "example": "Обработка" },
          "workers": { "type": "integer", "example": 5 }
        },
        "required": ["name", "type", "workers"]
      },
      "Workshop": {
        "allOf": [
          { "$ref": "#/components/schemas/WorkshopCreate" },
          {
            "type": "object",
            "properties": {
              "id": { "type": "integer", "example": 1 },
              "createdAt": { "type": "string", "format": "date-time" },
              "updatedAt": { "type": "string", "format": "date-time" }
            }
          }
        ]
      },

      "ProductWorkshopCreate": {
        "type": "object",
        "properties": {
          "productId": { "type": "integer", "example": 1 },
          "workshopId": { "type": "integer", "example": 3 },
          "productionTime": { "type": "number", "example": 2.5 }
        },
        "required": ["productId", "workshopId", "productionTime"]
      },
      "ProductWorkshopUpdate": {
        "type": "object",
        "properties": {
          "productionTime": { "type": "number", "example": 3.0 }
        },
        "required": ["productionTime"]
      },
      "ProductWorkshop": {
        "allOf": [
          { "$ref": "#/components/schemas/ProductWorkshopCreate" },
          {
            "type": "object",
            "properties": {
              "id": { "type": "integer", "example": 10 },
              "createdAt": { "type": "string", "format": "date-time" },
              "updatedAt": { "type": "string", "format": "date-time" }
            }
          }
        ]
      }
    }
  }
}
